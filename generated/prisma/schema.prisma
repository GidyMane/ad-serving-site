generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  CLIENT
}

model User {
  id        String   @id @default(uuid())
  kindeId   String   @unique
  email     String   @unique
  name      String?
  domains   Domain[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Domain {
  id        String        @id @default(uuid())
  name      String        @unique
  userId    String?
  user      User?         @relation(fields: [userId], references: [id])
  emails    Email[]
  summary   EmailSummary?
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
}

model Email {
  id         String  @id @default(uuid())
  emailId    Int
  token      String
  messageId  String  @unique
  to         String?
  from       String?
  subject    String?
  spamStatus Int?
  domainId   String
  domain     Domain  @relation(fields: [domainId], references: [id])

  deliveryStatus String?
  sentAt         DateTime?
  firstOpenAt    DateTime?
  firstClickAt   DateTime?

  events    EmailEvent[]
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  @@index([domainId])
  @@index([domainId, sentAt])
  @@index([domainId, createdAt])
  @@index([to])
  @@index([from])
  @@index([subject])
  @@index([sentAt])
}

model EmailEvent {
  id         String   @id @default(uuid())
  eventId    String   @unique
  type       String
  status     String?
  occurredAt DateTime

  emailId String
  email   Email  @relation(fields: [emailId], references: [id])

  ipAddress String?
  country   String?
  city      String?
  userAgent String?

  linkId  String?
  linkUrl String?

  rawPayload Json

  createdAt DateTime @default(now())

  @@index([emailId, type])
  @@index([type, occurredAt])
  @@index([emailId, occurredAt])
}

model EmailSummary {
  id            String   @id @default(cuid())
  domainId      String   @unique
  domain        Domain   @relation(fields: [domainId], references: [id])
  totalSent     Int      @default(0)
  totalHardFail Int      @default(0)
  totalSoftFail Int      @default(0)
  totalBounce   Int      @default(0)
  totalError    Int      @default(0)
  totalHeld     Int      @default(0)
  totalDelayed  Int      @default(0)
  totalLoaded   Int      @default(0)
  totalClicked  Int      @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}
